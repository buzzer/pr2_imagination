<package>
  <description brief="race_simulation_run">

     race_simulation_run provides applications and tools to run the RACE system
     and Gazebo simulation in an automated manner.
     Applications include an Gazebo (ROS) interface class as well as a YAML
     parser class parsing the RACE Fluent format. The functionality is used in
     the executable 'sim_run' which encapsulates functionality to automate the
     system.

  </description>
  <author>Sebastian Rockel, Pascal Rost</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/race_simulation_run</url>

  <depend package="roscpp"/>
  <depend package="roslib"/>
  <depend package="rospy"/>
  <depend package="tf"/>

  <depend package="visualization_msgs" />
  <depend package="sensor_msgs"/>
  <depend package="geometry_msgs" />

  <depend package="pcl"/>
  <depend package="pcl_ros"/>
  <depend package="household_objects_database_msgs" />

  <depend package="actionlib" />
  <depend package="pr2_controllers_msgs" />
  <depend package="race_tabletop_object_publisher" />
  <depend package="gazebo_msgs" />
  <depend package="race_msgs" />
  <depend package="gazebo" />
  <depend package="std_msgs" />
  <depend package="race_pr2_markers" />
  <depend package="robot_motion_param" />

  <rosdep name="python-yaml" />

  <export>
    <!--<cpp cflags="-I${prefix}/include" lflags="-L${prefix}/lib -ltest_utility"/>-->
    <cpp cflags="-I${prefix}/include" lflags="-L${prefix}/lib"/>
  </export>

</package>
